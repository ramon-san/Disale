<%- layout('layouts/boilerplate') %>

<div class="row">
    <h1 class="text-center"><%= title %> </h1>
    <div class="col-6 offset-3">
        <form action="/camps/<%= camp.id %>?_method=PUT" method="POST">
            <div class="mb-3">
                <label class="form-label" for="name">Name: </label>
                <!-- Declare as shown in name to encapsulate body result under camp. -->
                <input class="form-control" type="text" name="camp[name]" id="name" value="<%= camp.name %>">
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location: </label>
                <input class="form-control" type="text" name="camp[location]" id="location"
                    value="<%= camp.location %>">
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Image URL</label>
                <input class="form-control" type="text" name="camp[image]" id="image" value="<%= camp.image %>">
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Average Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input class="form-control" type="number" id="price" value="<%= camp.price %>" aria-label="price"
                        aria-describedby="price-label" name="camp[price]">
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="number" name="camp[description]"
                    id="description"><%= camp.description %></textarea>
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Update Details</button>
            </div>
        </form>
        <div>
            <a href="/camps/<%= camp.id %>">Back to Camp</a>
        </div>
    </div>
</div>