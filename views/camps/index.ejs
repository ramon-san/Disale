<%- layout('layouts/boilerplate') %>

<h1><%= title %> </h1>
<div>
    <a href="/camps/new">Add Camp</a>
</div>
<div>
    <% for (let camp of camps) { %>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <img class="img-fluid" src="<%= camp.image %>" alt="">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= camp.name %></h5>
                    <p class="card-text"><%= camp.description %></p>
                    <p class="card-text">
                        <small class="text-muted"><%= camp.location %> </small>
                    </p>
                    <a class="btn btn-primary" href="camps/<%= camp.id %>">View <%= camp.name %> </a>
                </div>
            </div>
        </div>
    </div>
    <% } %>
</div>