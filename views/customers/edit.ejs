<%- layout('layouts/boilerplate') %>

<form action="/customers/<%= customer.id %>?_method=PUT" method="POST">
    <div style="margin-bottom: 10px">
        <label for="name">Name: </label>
        <!-- Declare as shown in name to encapsulate body result under customer. -->
        <input type="text" name="customer[name]" id="name" value="<%= customer.name %>">
        <label for="Industry">Industry: </label>
        <input type="text" name="customer[industry]" id="industry" value="<%= customer.industry %>">
    </div>
    <div style="margin-bottom: 10px">
        <label for=" location">Location: </label>
        <input type="text" name="customer[location]" id="location" value="<%= customer.location %>">
        <button>Edit</button>
    </div>
</form>
<div>
    <a href=" /customers">All customers</a>
</div>