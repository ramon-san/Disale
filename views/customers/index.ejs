<%- layout('layouts/boilerplate') %>

<h1><%= title %> </h1>
<div>
    <a href="/customers/new">Add Customer</a>
</div>
<div>
    <% for (let customer of customers) { %>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <img class="img-fluid" src="<%= customer.image %>" alt="">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= customer.name %></h5>
                    <p class="card-text"><%= customer.description %></p>
                    <p class="card-text">
                        <small class="text-muted"><%= customer.location %> </small>
                    </p>
                    <a class="btn btn-primary" href="customers/<%= customer.id %>">View <%= customer.name %> </a>
                </div>
            </div>
        </div>
    </div>
    <% } %>
</div>